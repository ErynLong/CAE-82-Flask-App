{% extends 'base.html.j2' %}
{% block title %}
Lyrics
{% endblock %}

{% block content %}
    <h1>Lyrics I Love</h1>

    <form method="POST" action="{{url_for('main.lyrics')}}">
        <div class="mb-3">
            <textarea class="form-control" placeholder="Currently listening to..." name="body" style="height: 100px;"></textarea>
        </div>
        <button type="submit" class="btn btn-primary"><i class="bi bi-send-fill"></i>&nbsp;Post</button>
    </form>

    {# <h1>Thoughts</h1> #}
    <hr>
    {% for post in posts %}
        {% include './includes/_lyricspost.html.j2' %}
    {% endfor %}
{% endblock %}